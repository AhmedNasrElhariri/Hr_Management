<!DOCTYPE html>
<html lang="en">
  <%- include('../includes/head')%>
  </head>
<body>
  <%- include('../includes/navigation')%>

  <section id="container" class="" style="width: 100%; margin: auto;">
    <section>
      <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                    The Employees Of The Company <a class="btn btn-success" href="/admin/addEmployee" style="margin-left: 10px;"><i class="icon_check_alt2"></i></a>
                    </header>
                    <% if(employees.length >0 ) { %>
                    <table class="table table-striped table-advance table-hover">
                    <tbody>
                        <tr>
                        <th><i class="icon_profile"></i> Full Name</th>
                        <th><i class="icon_profile"></i>Postion </th>
                        <th><i class="icon_mail_alt"></i> Email</th>
                        <th><i class="icon_pin_alt"></i> City</th>
                        <th><i class="icon_mobile"></i> Mobile</th>
                        <th><i class="icon_pin_alt"></i> Salary</th>
                        <th><i class="icon_cogs"></i> Action</th>
                        </tr>
                        <% for(let employee of employees) { %>
                                <tr>
                                <td><%= employee.fullName %></td>
                                <td><%= employee.postion %></td>
                                <td><%= employee.email %></td>
                                <td><%= employee.city %></td>
                                <td><%= employee.phoneNo %></td>
                                <td><%= employee.salary %></td>
                                <td>
                                    <div class="btn-group">
                                    <a class="btn btn-primary" href="/admin/addWorkingHours/<%= employee._id%>"><i class="icon_plus_alt2" title="Update the working schedule of the day "></i></a>
                                    <a class="btn btn-danger" href="#"><i class="icon_close_alt2" title="Delete"></i></a>
                                    </div>
                                </td>
                                </tr>
                        <% } %>
                    </tbody>
                    </table>
                    <% } else { %>
                        <header class="panel-heading">
                            No Employees
                        </header>
                    <% } %>
                </section>
                </div>
            </div>
        </section> 
    </section>
  </section>
  <%- include('../includes/end')%>
</body>
</html>